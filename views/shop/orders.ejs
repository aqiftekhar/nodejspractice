<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(orders.length <=0)  { %>
            <h1>No Order placed!!</h1>
        <% } else { %>
            <ul>
                <% orders.forEach( order => { %>
                    <li>
                        <h1># <%= order.id %></h1>
                        <ul>
                            <% order.Products.forEach(product => { %>
                            <li>
                                <%= product.title %> ( <%= product.OrderItem.quantity %> )
                            </li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>